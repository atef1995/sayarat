{
  "name": "backend",
  "version": "1.0.0",
  "engines": {
    "node": ">=16.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "npx dotenvx run -f .env.development -- node server.js",
    "start:prod": "npx dotenvx run -f .env.production -- node server.js",
    "start:dev": "npx dotenvx run -f .env.development -- node server.js",
    "start:docker": "node server.js",
    "test": "mocha",
    "test:jest": "jest tests/ --verbose",
    "test:jest:watch": "jest tests/ --watch --verbose",
    "test:arabic": "jest tests/arabicMetadataService.test.js --verbose",
    "test:sitemap": "jest tests/sitemapService.test.js --verbose",
    "test:email": "jest tests/brevoEmailService.test.js --verbose",
    "test:db": "jest tests/databaseConnection.test.js --verbose",
    "test:email:quick": "npx dotenvx run -f .env.development -- node scripts/test-email-quick.js",
    "test:integration": "jest test/email/email-integration.test.js --verbose",
    "migrate": "npx dotenvx run -f .env.development -- knex migrate:latest",
    "migrate:rollback": "npx dotenvx run -f .env.development -- knex migrate:rollback",
    "migrate:messaging": "npx dotenvx run -f .env.development -- node scripts/run-enhanced-messaging-migrations.js",
    "migrate:unified": "npx dotenvx run -f .env.development -- node scripts/run-migration.js migrate",
    "migrate:unified:rollback": "npx dotenvx run -f .env.development -- node scripts/run-migration.js rollback",
    "migrate:unified:status": "npx dotenvx run -f .env.development -- node scripts/run-migration.js status",
    "migrate:unified:verify": "npx dotenvx run -f .env.development -- node scripts/run-migration.js verify",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code:check": "npm run lint:check && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format",
    "code:quality": "node scripts/check-code-quality.js",
    "code:summary": "npm run lint 2>&1 | grep -E \"âœ–|problems\"",
    "pre-commit": "npm run code:check",
    "sitemap:generate": "npx dotenvx run -f .env.development -- node scripts/generateSitemap.js --generate",
    "sitemap:submit": "npx dotenvx run -f .env.development -- node scripts/generateSitemap.js --submit",
    "sitemap:stats": "npx dotenvx run -f .env.development -- node scripts/generateSitemap.js --stats",
    "sitemap:all": "npx dotenvx run -f .env.development -- node scripts/generateSitemap.js --generate --submit --stats",
    "sitemap:prod:generate": "npx dotenvx run -f .env.production -- node scripts/generateSitemap.js --generate",
    "sitemap:prod:submit": "npx dotenvx run -f .env.production -- node scripts/generateSitemap.js --submit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.39.0",
    "@getbrevo/brevo": "^2.2.0",
    "@supabase/supabase-js": "^2.49.10",
    "@tensorflow/tfjs-node": "^4.22.0",
    "axios": "^1.7.9",
    "bcryptjs": "^3.0.2",
    "connect-redis": "^8.1.0",
    "connect-session-knex": "^1.0.9",
    "connect-sqlite3": "^0.9.15",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.7",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.1",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsdom": "^26.1.0",
    "knex": "^3.1.0",
    "marked": "^4.3.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.1.1",
    "nodemailer": "^6.10.0",
    "nsfwjs": "^4.2.1",
    "openai": "^5.5.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.0",
    "redis": "^5.5.6",
    "sharp": "^0.33.5",
    "sqlite3": "^5.1.7",
    "streamifier": "^0.1.1",
    "stripe": "^17.7.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^17.21.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "mocha": "^11.0.1",
    "prettier": "^3.2.5",
    "supertest": "^7.1.3"
  }
}
